<style>

    td button {
        padding: 0px !important;
        /*cursor:pointer !important;*/
    }

    .menuBtn {
        margin-left: 3px;
    }
</style>
<section>

        <div class="card">
            @Html.Partial("~/Views/Shared/_MessageBox.cshtml")
            <div class="card-body">
                <form class="form">
                    <div class="form-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h4><i class="ft-user-plus"></i> Host Setup</h4>
                            </div>
                            <div class="col-md-6">

                                <button type="button" class="btn btn-warning pull-right menuBtn" id="btnClearId">
                                    <i class="ft-x"></i> Clear
                                </button>
                                <button type="button" id="btnSaveId" class="btn btn-success pull-right menuBtn">
                                    <i class="fa fa-check-square-o"></i> Save
                                </button>
                                <button type="button" id="btnListId" class="btn btn-info pull-right menuBtn">
                                    <i class="fa fa-list"></i> Host List
                                </button>
                                <button type="button" id="btnCreateId" class="btn btn-info pull-right menuBtn">
                                    <i class="fa fa-user"></i> Add New Host
                                </button>

                            </div>
                        </div>
                        <hr />
                        <div id="hostFormId">
                            <input type="hidden" id="hostId" />
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="hostNameId">Host Name</label>
                                        <input class="form-control border-danger" type="text" placeholder="Enter Host Name" id="hostNameId">
                                    </div>
                                    <div class="form-group">
                                        <label>Phone Number</label>
                                        <input class="form-control border-danger" id="hostPhoneNumberId" type="tel" placeholder="Enter Phone Number">
                                    </div>
                                    <div class="form-group">
                                        <label for="hostAddressId">Address</label>
                                        <textarea id="hostAddressId" rows="5" class="form-control border-danger" name="address" placeholder="Enter Address"></textarea>
                                    </div>
                                    <div class="form-group pb-1">
                                        <input type="checkbox" id="isActive" class="switchery switchery-small" checked />
                                        <label for="isActive" class="font-medium-2 text-bold-600 ml-1">Is Active</label>&nbsp;
                                    </div>
                                </div>
                            </div>
                            
                        </div>
                        <div id="hostListId">
                            <table id="hostListTableId" class="table table-striped table-bordered" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>Edit </th>
                                        <th>Host Name</th>
                                        <th>Phone Number</th>
                                        <th>Address</th>
                                        <th>Active</th>
                                    </tr>
                                </thead>

                            </table>
                        </div>
                    </div>

                </form>
            </div>
        </div>
</section>
<script src="~/Scripts/Application_Scripts/Host.js"></script>