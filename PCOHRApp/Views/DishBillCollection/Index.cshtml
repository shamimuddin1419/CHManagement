<section>
        <div class="card">
            @Html.Partial("~/Views/Shared/_MessageBox.cshtml")
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h4><i class="ft-zoom-in"></i> Dish Bill Collection</h4>
                    </div>
                    <div class="col-md-6">
                        <button type="button" class="btn btn-warning pull-right menuBtn" id="btnClearId">
                            <i class="ft-x"></i> Clear
                        </button>
                        <button type="button" id="btnSaveId" class="btn btn-success pull-right menuBtn">
                            <i class="fa fa-check-square-o"></i> Save Collection
                        </button>
                        <button type="button" id="btnListId" class="btn btn-info pull-right menuBtn">
                            <i class="fa fa-list"></i> Collection List
                        </button>
                        <button type="button" id="btnCreateId" class="btn btn-info pull-right menuBtn">
                            <i class="fa fa-user"></i> Generate New
                        </button>
                        
                        <a class="btn btn-primary pull-right menuBtn" href="/DishBillGenerate/Index">
                            <i class="fa fa-reply"></i> Go to Bill Generate
                        </a>
                        @*<button type="button" id="btnSearchId" class="btn btn-info pull-right menuBtn">
                            <i class="fa fa-search"></i> Search
                        </button>*@
                    </div>
                </div>

                @Html.Partial("~/Views/Shared/_CustomerSelectForBillCollection.cshtml")
                <div id="customerBillListId" class="billList table-responsive">
                    <table id="customerBillListTableId" class="dataTable table-bordered" style="width:100%">
                        <thead>
                            <tr>
                                <th>Dlt</th>
                                <th>V-No</th>
                                <th>CardNo</th>
                                <th>Name</th>
                                <th>ConFee</th>
                                <th>ReConFee</th>
                                <th>From</th>
                                <th>To</th>
                                <th>MonthlyFee</th>
                                <th>SftFee</th>
                                <th>NetAmt</th>
                                <th>RcvAmt</th>
                                <th>CusSl</th>
                                <th>PageNo</th>
                                <th>CollDate</th>
                            </tr>
                        </thead>

                    </table>
                </div>
            </div>
        </div>
        @Html.Partial("~/Views/Shared/_DishBillCollection.cshtml")
        @Html.Partial("~/Views/Shared/_DishCustomerInfo.cshtml")
</section>

<script src="~/Scripts/Application_Scripts/DishBillCollection.js"></script>