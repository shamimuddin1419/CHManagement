<style>
    td button {
        padding: 0px !important;
        /*cursor:pointer !important;*/
    }

    .menuBtn {
        margin-left: 3px;
    }
    .successLabel {
        color: #06f906;
    }
    .errorLabel{
        color:red;
    }
</style>
<section>
    <div class="card">
        @Html.Partial("~/Views/Shared/_MessageBox.cshtml")
        <div class="card-body">
            <div class="form">
                <div class="form-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h4><i class="ft-user-plus"></i> Rent a House</h4>
                        </div>
                        <div class="col-md-6">
                            <button type="button" class="btn btn-warning pull-right menuBtn" id="btnClearId">
                                <i class="ft-x"></i> Clear
                            </button>
                            <button type="button" id="btnSaveId" class="btn btn-success pull-right menuBtn">
                                <i class="fa fa-check-square-o"></i> Save
                            </button>
                            <button type="button" id="btnListId" class="btn btn-info pull-right menuBtn">
                                <i class="fa fa-list"></i> House List
                            </button>
                            <button type="button" id="btnCreateId" class="btn btn-info pull-right menuBtn">
                                <i class="fa fa-user"></i> Map New House
                            </button>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div id="renterHouseMappingFormId" class="renterHouseMappingForm col-md-6">
                            <input type="hidden" id="renterHouseId" />
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-group requiredFormGroup">
                                        <label for="renterId">Renter</label>
                                        <select class="form-control select2 border-danger" id="renterId">
                                            <option value="0">Select Renter</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group requiredFormGroup">
                                        <label for="projectId">Project</label>
                                        <select class="form-control select2 border-danger" id="projectId" onchange="loadAvailableHouseList(this)">
                                            <option value="0">Select Project</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-group requiredFormGroup">
                                        <label for="houseId">Unoccupied House</label>
                                        <select class="form-control select2 border-danger" id="houseId" onchange="checkHouseAvailability(this)">
                                            <option value="0">Select House</option>
                                        </select>
                                        <div id="houseAvailableMsgId" class="font-weight-bold"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-group requiredFormGroup">
                                        <label for="rentFromMonthId">Rent Start Month</label>
                                        <select class="form-control select2 border-danger" id="rentFromMonthId">
                                            <option value="0">Select Month</option>
                                            <option value="1">January</option>
                                            <option value="2">February</option>
                                            <option value="3">March</option>
                                            <option value="4">April</option>
                                            <option value="5">May</option>
                                            <option value="6">June</option>
                                            <option value="7">July</option>
                                            <option value="8">August</option>
                                            <option value="9">September</option>
                                            <option value="10">October</option>
                                            <option value="11">November</option>
                                            <option value="12">December</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group requiredFormGroup">
                                        <label for="rentFromYearId">Rent Start Year</label>
                                        <select class="form-control select2 border-danger" id="rentFromYearId">
                                            <option value="0">Select Year</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <div class="form group requiredFormGroup">
                                        <label for="rentAmountId">Monthly Rent</label>
                                        <input type="number" class="form-control border-danger" id="rentAmountId" />
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form group">
                                        <label for="advanceAmountId">Advance</label>
                                        <input type="number" class="form-control border-danger" id="advanceAmountId" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="~/Scripts/Application_Scripts/Rent.js"></script>
