<body class="vertical-layout vertical-menu 2-columns  fixed-navbar " data-open="click" data-menu="vertical-menu" data-col="2-columns">
    @if (Session["user"] != null)
    {
        <nav class="header-navbar navbar-expand-md navbar navbar-with-menu fixed-top navbar-semi-light bg-gradient-x-grey-blue">
            <div class="navbar-wrapper">
                <div class="navbar-header">
                    <ul class="nav navbar-nav flex-row">
                        <li class="nav-item mobile-menu d-md-none mr-auto"><a class="nav-link nav-menu-main menu-toggle hidden-xs" href="#"><i class="ft-menu font-large-1"></i></a></li>
                        <li class="nav-item">
                            <a class="navbar-brand" href="/Home/Index">
                                <img class="brand-logo" alt="stack admin logo" src="~/Content/Theme/app-assets/images/logo/stack-logo.png">
                                <h2 class="brand-text">Dashboard</h2>
                            </a>
                        </li>
                        <li class="nav-item d-md-none"><a class="nav-link open-navbar-container" data-toggle="collapse" data-target="#navbar-mobile"><i class="fa fa-ellipsis-v"></i></a></li>
                    </ul>
                </div>
                <div class="navbar-container content">
                    <div class="collapse navbar-collapse" id="navbar-mobile">
                        <ul class="nav navbar-nav mr-auto float-left">
                            <li class="nav-item d-none d-md-block"><a class="nav-link nav-menu-main menu-toggle hidden-xs" href="#"><i class="ft-menu"></i></a></li>

                            <li class="nav-item d-none d-md-block"><a class="nav-link nav-link-expand" href="#"><i class="ficon ft-maximize"></i></a></li>

                        </ul>
                        <ul class="nav navbar-nav float-right">
                            <li class="dropdown dropdown-user nav-item">
                                @{PCOHRApp.Models.UserVM user = (PCOHRApp.Models.UserVM)Session["user"];}
                                <a class="dropdown-toggle nav-link dropdown-user-link" href="#" data-toggle="dropdown"><span class="user-name"><i class="fa fa-user-circle"></i> @user.userFullName</span></a>
                                <div class="dropdown-menu dropdown-menu-right">
                                    <a class="dropdown-item" href="~/Account/Logout"><i class="ft-power"></i> Logout</a>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>



    <!-- BEGIN: Main Menu-->
        <div class="main-menu menu-fixed menu-dark menu-accordion menu-shadow">
            <div class="main-menu-content">
                <ul class="navigation navigation-main" id="main-menu-navigation" data-menu="menu-navigation">
                    <li class=" navigation-header">
                        <span>Menus</span><i class=" ft-minus" data-toggle="tooltip" data-placement="right" data-original-title="General"></i>
                    </li>
                    @{List<PCOHRApp.Models.UserPageVM> menuData = (List<PCOHRApp.Models.UserPageVM>)Session["menuData"];}
                    @if (@user.userType == "Cable")
                    {
                        <li class=" nav-item">
                            <a href="index.html"><i class="ft-cloud-rain"></i><span class="menu-title" data-i18n="">Dish Operator</span><span class="badge badge badge-primary badge-pill float-right mr-2"></span></a>
                            <ul class="menu-content">
                                @foreach (var item in menuData.Where(x => x.pageType == "Cable" && x.pageSubType == "Dish"))
                                {
                                    <li>
                                        <a class="menu-item" href="~/@item.pageUrl">@item.pageName</a>
                                    </li>
                                }
                            </ul>
                        </li>
                        <li class=" nav-item">
                            <a href="index.html"><i class="ft-cloud-rain"></i><span class="menu-title" data-i18n="">Internet</span><span class="badge badge badge-primary badge-pill float-right mr-2"></span></a>
                            <ul class="menu-content">
                                @foreach (var item in menuData.Where(x => x.pageType == "Cable" && x.pageSubType == "Internet"))
                                {
                                    <li>
                                        <a class="menu-item" href="~/@item.pageUrl">@item.pageName</a>
                                    </li>
                                }
                            </ul>
                        </li>
                        <li class=" nav-item">
                            <a href="index.html"><i class="ft-download"></i><span class="menu-title" data-i18n="">Dish Reports</span><span class="badge badge badge-primary badge-pill float-right mr-2"></span></a>
                            <ul class="menu-content">
                                @foreach (var item in menuData.Where(x => x.pageType == "CableReports" && x.pageSubType == "Dish"))
                                {
                                    <li>
                                        <a class="menu-item" href="~/@item.pageUrl">@item.pageName</a>
                                    </li>
                                }
                            </ul>
                        </li>
                        <li class=" nav-item">
                            <a href="index.html"><i class="ft-download"></i><span class="menu-title" data-i18n="">Internet Reports</span><span class="badge badge badge-primary badge-pill float-right mr-2"></span></a>
                            <ul class="menu-content">
                                @foreach (var item in menuData.Where(x => x.pageType == "CableReports" && x.pageSubType == "Internet"))
                                {
                                    <li>
                                        <a class="menu-item" href="~/@item.pageUrl">@item.pageName</a>
                                    </li>
                                }
                            </ul>
                        </li>
                    }
                    @if (@user.userType == "House")
                    {
                        <li class=" nav-item">
                            <a href="index.html"><i class="ft-home"></i><span class="menu-title" data-i18n="">House Rent</span><span class="badge badge badge-primary badge-pill float-right mr-2"></span></a>
                            <ul class="menu-content">
                                @foreach (var item in menuData.Where(x => x.pageType == "House"))
                                {
                                    <li>
                                        <a class="menu-item" href="~/@item.pageUrl">@item.pageName</a>
                                    </li>
                                }
                            </ul>
                        </li>
                    }
                    @if (@menuData.Any(x => x.pageType == "Admin"))
                    {
                        <li class=" nav-item">
                            <a href="index.html"><i class="ft-settings"></i><span class="menu-title" data-i18n="">Settings</span><span class="badge badge badge-primary badge-pill float-right mr-2"></span></a>
                            <ul class="menu-content">
                                @foreach (var item in menuData.Where(x => x.pageType == "Admin"))
                                {
                                    <li>
                                        <a class="menu-item" href="~/@item.pageUrl">@item.pageName</a>
                                    </li>
                                }
                            </ul>
                        </li>
                    }
                </ul>

            </div>
        </div>
    <!-- END: Main Menu-->
    }
